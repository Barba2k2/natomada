# ==========================================
# Application Configuration
# ==========================================
SPRING_PROFILES_ACTIVE=docker
NODE_ENV=development
APP_PORT=8080
API_URL=http://localhost:8080

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_DB=na_tomada
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_PORT=5432

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=change-me-in-production
REDIS_PORT=6379

# ==========================================
# Kafka Configuration
# ==========================================
KAFKA_CONSUMER_GROUP=natomada-group

# ==========================================
# JPA Configuration
# ==========================================
SPRING_JPA_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production-use-strong-random-string
JWT_EXPIRES_IN=3600000
# Note: Spring Boot uses milliseconds, so 1h = 3600000ms

# ==========================================
# Refresh Token Configuration
# ==========================================
REFRESH_TOKEN_EXPIRES_IN=604800000
# Note: 7 days = 604800000ms

# ==========================================
# Email (SMTP) Configuration
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=noreply@natomada.com
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# ==========================================
# CORS Configuration
# ==========================================
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ==========================================
# Rate Limiting Configuration
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ==========================================
# External APIs - OpenChargeMap
# ==========================================
# Get your API key at: https://openchargemap.org/site/develop/api
OPENCM_API_KEY=your-opencm-api-key-here
OPENCM_BASE_URL=https://api.openchargemap.io/v3

# ==========================================
# External APIs - Google Places
# ==========================================
# Get your API key at: https://developers.google.com/maps/documentation/places/web-service
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# ==========================================
# AWS S3 Configuration
# ==========================================
# Get your AWS credentials from: https://console.aws.amazon.com/iam/
AWS_S3_BUCKET_NAME=natomada-images
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG
